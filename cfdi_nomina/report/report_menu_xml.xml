            usage="default"
            header="False"
            attachment_use="True"
            attachment="(object.state in ('done')) and ('NOM'+(object.number or '').replace('/','')+'.pdf')" 
        />
        <record id="hr_payslip_mx" model="ir.actions.report.xml">
            <field name="paperformat_id" ref="bias_base_report.paperformat_us_portrait"/>
        </record>
    </data>
