<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
    
        <record model="ir.ui.view" id="batch_cfdi_view_form">
            <field name="name">batch.cfdi.view.form</field>
            <field name="model">cfdi_nomina.batch_cfdi</field>
            <field name="arch" type="xml">
                <form string="Generar XMLs">
                    <group>
                        <field name="fecha_pago"/>
                        <field name="concepto"/>
                        <field name="metodo_pago_id" style="width:33%%"/>
                        <field name="nomina_ids"/>
                    </group>
                    <footer>
                        <button type="special" special="cancel" string="Cerrar" icon="fa-times-circle-o"/>
                        <button type="object" string="Crear CFDIs" name="action_batch_cfdi" icon="fa-cogs"/>
                    </footer>
                </form>
            </field>
        </record>    
        <record id="action_batch_cfdi" model="ir.actions.act_window">
            <field name="name">Generar CFDIs</field>
            <field name="res_model">cfdi_nomina.batch_cfdi</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_type">form</field>
            <field name="view_id" ref="batch_cfdi_view_form"/>
            <field name="target">new</field>
        </record>        
<!--         <menuitem id="menu_batch_cfdi" 
            parent="cfdi_nomina.menu_cfdi_nomina_mx"
            action="action_batch_cfdi"/> -->



        <record model="ir.ui.view" id="batch_mail_view_form">
            <field name="name">batch.mail.view.form</field>
            <field name="model">cfdi_nomina.batch_mail</field>
            <field name="arch" type="xml">
                <form string="Enviar por email XML y PDF">
                    <group>
                        <field name="nomina_ids"/>
                    </group>
                    <footer>
                        <button type="special" special="cancel" string="Cerrar" icon="fa-times-circle-o"/>
                        <button type="object" string="Enviar mails" name="action_batch_mail" icon="fa-cogs"/>
                    </footer>
                </form>
            </field>
        </record>    
        <record id="action_batch_mail" model="ir.actions.act_window">
            <field name="name">Enviar n√≥minas  por mail</field>
            <field name="res_model">cfdi_nomina.batch_mail</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_type">form</field>
            <field name="view_id" ref="batch_mail_view_form"/>
            <field name="target">new</field>
        </record>        
<!--         <menuitem id="menu_batch_mail" 
            parent="cfdi_nomina.menu_cfdi_nomina_mx"
            action="action_batch_mail"/> -->

        
    </data>
</odoo>    