<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>


        <record model="ir.ui.view" id="product_template_form_view_cce">
            <field name="name">product_template_form_view_cce</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_form_view"/>
            <field name="arch" type="xml">
                <page name="invoicing" position="inside">
                    <separator string="Complemento Comercio Exterior"/>
                    <group>
                        <field name="fraccion_arancelaria_id"/>
                    </group>
                </page>
            </field>
        </record>

        <!--
        <field name="comercio_exterior_num_certificado_origen" attrs="{'required':[('comercio_exterior_certificado_origen','!=','0')]}"/>
        -->
        <record model="ir.ui.view" id="view_invoice_form_add_comercio_exterior">
            <field name="name">account_invoice_form_add_comercio_exterior</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.invoice_form"/>
            <field name="arch" type="xml">
                <data>
                    <field name="partner_id" position="after">
                        <field name="comercio_exterior_activate" invisible="1"/>
                    </field>
                    <notebook position="inside">
                        <page string="Complemento Comercio Exterior" attrs="{'invisible':[('comercio_exterior_activate','=',False)]}">
                            <group col="4" colspan="4">
                                <field name="comercio_exterior_tipo_operacion" attrs="{'required':[('comercio_exterior_activate','=',True)]}"/>
                                <field name="comercio_exterior_clave_pedimento" attrs="{'required':[('comercio_exterior_tipo_operacion','=','2')]}"/>
                                <field name="comercio_exterior_certificado_origen" attrs="{'required':[('comercio_exterior_tipo_operacion','=','2')]}"/>
                                <field name="comercio_exterior_num_certificado_origen" />
                                <field name="comercio_exterior_num_exportador_confiable"/>
                                <field name="comercio_exterior_incoterm" attrs="{'required':[('comercio_exterior_tipo_operacion','=','2')]}"/>
                                <field name="comercio_exterior_subdivision" attrs="{'required':[('comercio_exterior_tipo_operacion','=','2')]}"/>
                                <field name="comercio_exterior_observaciones"/>
                                <field name="comercio_exterior_tipo_cambio_usd"/>
                                <field name="comercio_exterior_total_usd" attrs="{'required':[('comercio_exterior_tipo_operacion','=','2')]}"/>
                            </group>

                            <group string="Destinatario" col="4" colspan="4">
                                <group colspan="2">
                                    <field name="comercio_exterior_domicilio_destinatario"/>
                                </group>
                            </group>
                            <separator string="Mercancías"/>
                            <button name="update_comercio_exterior_lines" type="object" string="Actualizar"/>
                            <field name="comercio_exterior_line_ids">
                                <form string="Mercancías">
                                    <group>
                                        <field name="invoice_line_id" readonly="1"/>
                                        <field name="comercio_exterior_no_identificacion" required="1"/>
                                        <field name="comercio_exterior_fraccion_arancelaria_id"/>
                                        <field name="comercio_exterior_cantidad_aduana"/>
                                        <field name="comercio_exterior_unidad_aduana_id"/>
                                        <field name="comercio_exterior_valor_aduana"/>
                                        <field name="comercio_exterior_valor_dolares" required="1"/>
                                        <field name="comercio_exterior_descripciones_especificas">
                                            <tree string="Descripciones específicas" editable="bottom">
                                                <field name="marca"/>
                                                <field name="modelo"/>
                                                <field name="submodelo"/>
                                                <field name="numero_serie"/>
                                            </tree>
                                        </field>
                                    </group>
                                </form>
                                <tree string="Mercancías">
                                    <field name="invoice_line_id" readonly="1"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>   
                </data>
            </field>
        </record>

    </data>
</odoo>