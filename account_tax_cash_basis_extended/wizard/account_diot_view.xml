<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <!-- diot Lines Wizard-->
        <record id="view_account_diot" model="ir.ui.view">
            <field name="name">DIOT Report</field>
            <field name="model">account.diot</field>
            <field name="arch" type="xml">
            <form string="DIOT Statement File Generation" version="7.0">
                <div states="get">
                    <h2>Export Complete</h2>
                    <p>Here is the exported DIOT Report file: <field name="diot_file" readonly="1" filename="filename"/></p>
                    <p>This file was generated using the universal <strong>Unicode/UTF-8</strong> file encoding, please be sure to view and edit
                       using the same encoding.</p> 
                    <!--p>The next step is upload the file to the SAT portal:
                        <ul>
                            <li><a href="https://tramitesdigitales.sat.gob.mx/InformativaDeTerceros.Internet" target="_blank">Send DIOT Satatement</a></li>
                        </ul>
                    </p-->
                </div>
                <div states="choose">
                    <p>This wizard create the DIOT statement file filter by date. Select any date of the period to process. The information required for this tax stastement is automatically generated by Odoo after pressing the button <strong>Create DIOT File</strong>.</p>
                </div>
                <group states="choose" string="Statement Date">
                    <field name="company_id" invisible="1"/>
                    <field name="state" invisible="1"/>
                    <field name="filename" invisible="1"/>
                    <field name="date_to" invisible="1"/>
                    <field name="date_from"/>
                </group>
                <footer states="choose">
                    <button name="create_diot_file" string="Create DIOT File" type="object" class="oe_highlight"/>
                    <button name="create_detailed_diot_file" string="Create Detailed DIOT File" type="object" class="btn-default"/>
                    <button special="cancel" string="Cancel" type="object" class="btn-default"/>
                </footer>
                <footer states="get">
                    <button special="cancel" string="Close" type="object" class="btn-primary"/>
                </footer>
            </form>
            </field>
        </record>

        <record id="action_account_diot" model="ir.actions.act_window">
            <field name="name">DIOT Statement File Generation</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">account.diot</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

    </data>
</openerp>
